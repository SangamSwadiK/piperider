{
  "name": "piperider-report",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "homepage": "./",
  "dependencies": {
    "@chakra-ui/icons": "^2.0.1",
    "@chakra-ui/react": "^2.1.2",
    "@chakra-ui/styled-system": "^2.1.1",
    "@chakra-ui/system": "^2.1.1",
    "@chakra-ui/theme-tools": "^2.0.1",
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "d3": "^7.4.4",
    "date-fns": "^2.28.0",
    "framer-motion": "^6.3.4",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "wouter": "2.8.0-alpha.2"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@types/d3": "^7.4.0",
    "@types/jest": "^28.1.2",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "chalk": "^5.0.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "json-schema-to-typescript": "^10.1.5",
    "node-html-parser": "^5.3.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-to-zod": "^1.11.0",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "setup": "run-s typing:* embed:html",
    "start:single": "npm run setup && PORT=3000 REACT_APP_SINGLE_REPORT=true react-scripts start",
    "start:comparison": "npm run setup && PORT=3001 REACT_APP_SINGLE_REPORT=false react-scripts start",
    "typing:single": "npx json2ts ../piperider_cli/profiler/schema.json > src/sdlc/single-report-schema.d.ts",
    "zod": "npx ts-to-zod src/sdlc/single-report-schema.d.ts src/sdlc/zod-types.ts",
    "embed:html": "node src/sdlc/embed-window-data.js",
    "strip:html": "node src/sdlc/clean-window-data.js",
    "build": "run-s strip:html build:*",
    "build:single": "rimraf ../piperider_cli/data/report/single-report && GENERATE_SOURCEMAP=false REACT_APP_SINGLE_REPORT=true react-scripts build && mv build ../piperider_cli/data/report/single-report",
    "build:comparison": "rimraf ../piperider_cli/data/report/comparison-report && GENERATE_SOURCEMAP=false REACT_APP_SINGLE_REPORT=false react-scripts build && mv build ../piperider_cli/data/report/comparison-report",
    "eject": "react-scripts eject",
    "test": "react-scripts test",
    "lint": "eslint src/",
    "lint:fix": "npm run lint -- --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "packageManager": "yarn@3.2.1"
}